<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/_1stButtom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_1stTextView"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/_1stTextView"
      />
  <TextView
      android:id="@+id/_1stTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_2ndTextView"
      android:textSize="36dp"
      android:visibility="invisible"
      android:textAlignment="center"
      app:layout_constraintTop_toBottomOf="@id/_1stTextView"/>
  <Button
      android:id="@+id/_2ndButtom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_3thTextView"
      app:layout_constraintBottom_toTopOf="@id/_3thButton"/>
  <TextView
      android:id="@+id/_2ndTextView"
      android:layout_width="150dp"
      android:layout_height="60dp"
      android:text="@string/text_4thTextView"
      android:textSize="50dp"
      android:textAlignment="center"
      android:layout_marginBottom="180dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@id/_2ndButtom"
      />
  <Button
      android:id="@+id/_3thButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/reset"
      app:layout_constraintBottom_toBottomOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>